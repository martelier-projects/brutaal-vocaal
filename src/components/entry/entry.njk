{% set classes = {
  'entry': true,
  'entry--horizontal': type === 'horizontal'
} | classes %}

<article class="{{ classes }}">
  <h1 class="entry__title">{{ title }}</h1>

  <div class="entry__text-wrapper">
    {%- for text in texts -%}
      <p class="entry__text">{{ text | safe }}</p>
    {%- endfor -%}
  </div>
</article>
