{% extends '../layout/default.njk' %}

{% block body %}
  {%- component 'header', header -%}

  <main>
    <div class="constrain-max">
      <div id="het-koor">
        <img src="/static/img/koor.jpg" alt="">
      </div>

      <div class="constrain-max">
        <div class="section-item">
          {%- component 'entry', entryText -%}
        </div>
      </div>

      <div id="optredens" class="page-item">
        <div class="two-one">
          <div class="two-one__left">
            <h2>Optredens</h2>
            {%- component 'gigs' -%}
          </div>
          <div class="two-one__right">
            <img src="/static/img/poster-voorjaarsconcert.jpg" alt="">
          </div>
        </div>
      </div>
    </div>

    <div class="page-item">
      <div class="constrain-max">
        <img src="/static/img/poster-voorjaarsconcert.jpg" alt="">
      </div>
    </div>

    <div class="colored-square">
      <div class="page-item constrain-max">
        {%- component 'contact' -%}
      </div>
    </div>
  </main>
{% endblock %}
